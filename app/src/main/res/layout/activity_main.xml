<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.denie.xperiathemeviewer.MainActivity">

    <RelativeLayout
     android:id="@+id/activity_main"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:paddingLeft="@dimen/activity_horizontal_margin"
     android:paddingRight="@dimen/activity_horizontal_margin"
     android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <TextView
        android:text="Buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/textView"/>

    <Button
        android:text="Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/button1" />

    <Button
        android:text="Disabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_centerHorizontal="true"
        android:enabled="false"/>

    <Button
        android:text="Pressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Toggles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/textView2"
        android:id="@+id/view2"/>

    <ToggleButton
        android:text="Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/toggleButton1" />

    <ToggleButton
        android:text="Diisabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toggleButton1"
        android:layout_centerHorizontal="true"
        android:id="@+id/toggleButton2"
        android:enabled="false"/>

    <ToggleButton
        android:text="Pressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toggleButton2"
        android:layout_alignParentEnd="true"
        android:id="@+id/toggleButton3" />

    <TextView
        android:text="CheckBoxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButton1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/textView5"
        android:id="@+id/view3"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/checkBox1" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox1"
        android:layout_centerHorizontal="true"
        android:id="@+id/checkBox2"
        android:enabled="false" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_alignParentEnd="true"
        android:id="@+id/checkBox3" />

    <TextView
        android:text="RadioButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/textView6"
        android:id="@+id/view4"/>

    <RadioButton
        android:text="Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/radioButton1"
        android:layout_alignEnd="@+id/checkBox1" />

    <RadioButton
        android:text="Disabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioButton1"
        android:layout_alignStart="@+id/button2"
        android:id="@+id/radioButton2"
        android:layout_alignEnd="@+id/checkBox2"
        android:enabled="false" />

    <RadioButton
        android:text="Pressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioButton2"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioButton3"
        android:layout_alignStart="@+id/toggleButton3" />

    <TextView
        android:text="SeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView7" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/textView7"
        android:id="@+id/view5"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/seekBar3"
        android:layout_alignParentEnd="true" />


    <TextView
        android:text="Switches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/seekBar3"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/textView8"
        android:id="@+id/view7"/>

    <Switch
        android:text="Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view7"
        android:layout_marginTop="10dp"
        android:id="@+id/switch1" />

        <Switch
        android:text="Pressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch2"
        android:layout_alignParentEnd="true"
        android:id="@+id/switch3" />

        <TextView
            android:text="Accent Colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/textView9"
            android:layout_below="@+id/switch3"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/textView9"
            android:id="@+id/view8"/>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@id/view8"
    android:id="@+id/RelativeLayout1">
        <ImageView
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_marginTop="20dp"
            android:id="@+id/imageView1"
            android:src="@drawable/accent_color"
            />

        <TextView
            android:text="Accent color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/textView10"
            android:layout_marginLeft="65dp"
            android:paddingTop="17dp" />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view8"
            android:layout_toEndOf="@id/RelativeLayout1">
        <ImageView
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_marginTop="20dp"
            android:id="@+id/imageView2"
            android:src="@drawable/primary_color"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"/>

        <TextView
            android:text="Primary color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/textView11"
            android:layout_alignParentEnd="true"
            android:paddingTop="17dp" />
    </RelativeLayout>

        <Switch
            android:text="Disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            android:enabled="false"
            android:layout_alignBaseline="@+id/switch1"
            android:layout_alignBottom="@+id/switch1"
            android:layout_alignEnd="@+id/radioButton2" />


    </RelativeLayout>
</ScrollView>